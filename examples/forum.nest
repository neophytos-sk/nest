struct email_t {
    varchar name = ""
    varchar address
    pk address
}

struct user {
    varint user_id
    email_t email
}

struct forum_t {
    varchar name
    struct post_t {
        varchar title
        varchar body
        date date
        user author
    }
    multiple post_t post
}

